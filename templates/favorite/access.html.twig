{% extends 'base.html.twig' %}

{% block title %}Accéder aux favoris!{% endblock %}

{% block body %}


<div class="container" style="margin-top:170px; margin-bottom:50px">

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form action="/favorites/listing" method="post">
            <div class="form-group">
                <label for="email">Adresse email pour accéder aux favoris</label>
                <input type="email" name="email" id="email" class="form-control">
            </div>
            <div class="col-md-12 mt-3">
                <button type="submit" class="btn btn-a">Accéder aux favoris</button>
            </div>
        </form>
	</div>
</div>

</div>

{% endblock %}
