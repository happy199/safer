              <div class="col-md-12 col-lg-4 my-5">
                <div class="property-contact">
                    {% if app.user is null %}
                        <form action="{{ property.slug }}/favorite" method="post">
                            <div class="form-group">
                                <label for="email">Adresse email</label>
                                <input type="email" name="email" id="email" class="form-control">
                            </div>
                            <div class="col-md-12 mt-3">
                                <button type="submit" class="btn btn-a">Ajouter aux favoris</button>
                            </div>
                        </form>
                    {% else %}
                        <div class="col-md-12 mt-3">
                            <a href="{{ property.slug }}/favorite" class="btn btn-a">Ajouter aux favoris</a>
                        </div>
                    {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section><!-- End Property Single-->

  </main><!-- End #main -->

{% endblock %}
